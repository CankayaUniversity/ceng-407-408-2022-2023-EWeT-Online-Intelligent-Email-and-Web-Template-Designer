@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    body {
        padding-top: 70px;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
    }

        .navbar-brand i {
            margin-right: 5px;
        }

    .navbar-nav .nav-link {
        display: flex;
        align-items: center;
    }

        .navbar-nav .nav-link i {
            margin-right: 5px;
        }

        .navbar-nav .nav-link .user-icon {
            margin-right: 5px;
            color: #888;
        }

        .navbar-nav .nav-link .logout-icon {
            margin-right: 5px;
            color: #888;
        }
</style>
<div class="collapse navbar-collapse container d-flex flex-row-reverse bd-highlight" id="navbarNav">
<ul class="navbar-nav">
    
@if (SignInManager.IsSignedIn(User))
{

        <li class="nav-item">
            <a class="nav-link" href="~/Index">
              <i class="fas fa-home"></i>
              <span>Anasayfa</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                <i class="fas fa-user user-icon"></i>
                <span title="Manage">User @User.Identity?.Name!</span>
            </a>
        </li>

        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <a class="nav-link" >
                    <i class="fas fa-sign-out-alt logout-icon"></i>
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </a>
            </form>
        </li>
        
}
else
{
        <li class="nav-item">
            <a class="nav-link" href="~/Index">
                <i class="fas fa-home"></i>
                <span>Anasayfa</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus"></i>
                <span>Register</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-user"></i>
                <span>Login</span>
            </a>
        </li>
}   

</ul>
</div>


      